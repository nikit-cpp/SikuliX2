	<parent>
		<groupId>com.sikulix</groupId>
		<artifactId>sikulixtensions</artifactId>
		<version>2.0.0-b1</version>
		<relativePath>../</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.sikulix</groupId>
	<artifactId>sikulixjrubyaddons</artifactId>
	<version>1.1.0</version>

	<developers>
		<developer>
			<id>RomanSSamarev</id>
			<name>Roman S Samarev</name>
			<email>samarev@acm.org</email>
		</developer>
	</developers>

	<repositories>
		<repository>
		<id>rubygems-release</id>
		<url>http://rubygems-proxy.torquebox.org/releases</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>rubygems</groupId>
			<artifactId>rspec</artifactId>
			<version>2.14.1</version>
			<type>gem</type>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>rubygems</groupId>
			<artifactId>cucumber</artifactId>
			<version>1.3.15</version>
			<type>gem</type>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>rubygems</groupId>
			<artifactId>rspec-given</artifactId>
			<version>3.5.4</version>
			<type>gem</type>
			<optional>true</optional>
		</dependency>
	</dependencies>

	<build>
<!--    <defaultGoal>clean package</defaultGoal>-->
		<plugins>
			<plugin>
				<groupId>de.saumya.mojo</groupId>
				<artifactId>gem-maven-plugin</artifactId>
				<version>1.0.0</version>
				<configuration>
					<includeRubygemsInResources>true</includeRubygemsInResources>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>initialize</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<descriptors>
						<descriptor>../${sikuli.helpers}/plain.xml</descriptor>
					</descriptors>
					<finalName>sikulixjrubyaddons-${sikuli.usedversion}</finalName>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
